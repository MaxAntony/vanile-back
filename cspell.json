{
  "$schema": "https://raw.githubusercontent.com/streetsidesoftware/cspell/main/cspell.schema.json",
  "version": "0.2",
  "language": "en,es",
  "words": [],
  "useGitignore": true,
  "ignorePaths": ["node_modules"],
  "dictionaries": ["custom-words", "package-names"],
  "dictionaryDefinitions": [
    {
      "name": "custom-words",
      "addWords": true,
      "path": "~/.config/cspell/custom-words.txt"
    },
    {
      "name": "package-names",
      "addWords": true,
      "path": "~/.config/cspell/package-names.txt"
    }
  ]
}
